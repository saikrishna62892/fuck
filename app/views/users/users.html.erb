
<br>
<center>
	<div class="search-container">
        <%= form_with scope: :user_search, local: true, url:'/user_search' do |form| %>
        <%= form.text_field :search, placeholder: "Search Username.." , style: 'width:36%'%>
        <button type="submit" style="padding: 4px;">Search!</button>
        <% end %>
  </div>
</center>

  	<% @users.each do |user| %>
    <div class="halign">
  	   <div class="carduser">
          <center>
            <div class="containercard">
  	         <%= image_tag(user.avatar,:size => "200x200")%>
                <h4><b><%= link_to user.username, user_profile_path(user)  %></b></h4> 
                <p><%= user.email %></p> 
                  </div>
          </center>
	       </div>
    </div>

    <% end %>