<div class="wrapper wrapper--w960">
            <div class="card card-4">
                <div class="card-body">





<div class="fixed">
        <div class="hero-info">

        <center><h3>Sent Requests</h3></center>
        <table class="table table-striped table-blue">
    <thead>
    <tr>
      <th class="text-center">#</th>
      <th class="text-center" >Problem Title</th>
      <th class="text-center">Access</th>
      
    </tr>
    </thead>

  <tbody>
    <% sno=1%>
    <% @sent_requests.each do |req|%>
    <% prob = Problem.find(req.problem_id) %>
    <tr>
      <td scope="row" align="center"><%= sno %></td >
      <td align="center"><%= link_to prob.prob_title, view_problem_path(prob) %></td>

      <td align="center"> <% if req.grant_access %>
        GRANTED
        <% else %>
        NOT GRANTED YET
        <% end %>
      </td>
      
    </tr>
    <% sno=sno+1 %>
    <%end%>
</tbody>
</table>
<div>
        
        </div>
        </div>
        </div>

  </div>
  </div>
